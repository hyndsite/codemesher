= form_for @session do |f|
  - if @session.errors.any?
    #error_explanation
      %h2= "#{pluralize(@session.errors.count, "error")} prohibited this session from being saved:"
      %ul
        - @session.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :abstract
    = f.text_area :abstract
  .field
    = f.label :start
    = f.datetime_select :start
  .field
    = f.label :end
    = f.datetime_select :end
  .field
    = f.label :room
    = f.text_field :room
  .field
    = f.label :difficulty
    = f.text_field :difficulty
  .field
    = f.label :speaker_name
    = f.text_field :speaker_name
  .field
    = f.label :technology
    = f.text_field :technology
  .field
    = f.label :uri
    = f.text_area :uri
  .field
    = f.label :event_type
    = f.text_field :event_type
  .field
    = f.label :id
    = f.text_field :id
  .field
    = f.label :session_lookup_id
    = f.text_area :session_lookup_id
  .field
    = f.label :speaker_uri
    = f.text_area :speaker_uri
  .actions
    = f.submit 'Save'
