<% provide(:title, "Sign-in") %>
<h1>Sign-in</h1>

<%= form_for(:session, url: sessions_path) do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div><%= form.submit "Sign in", class: "btn btn-large btn-primary"  %></div>
<% end %>

<p>New User? <%= link_to "Sign up!", signup_path  %></p>
